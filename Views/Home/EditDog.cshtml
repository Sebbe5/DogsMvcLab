@using DogsMvc.Models;
@model Dog
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditDog</title>
</head>
<body> 
    <form action="/dogs/edit/@Model.Id" method="post">
        <label>Name</label>
        <input type="text" name="Name" value="@Model.Name"/>
        <label>Age</label>
        <input type="number" name="Age" value="@Model.Age"/>
        <input type="submit" value="Update" />
    </form>
</body>
</html>
